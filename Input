/*
* New tab in processing sketch.
* Handles input from keyPressed() and keyReleased() functions
* Note: does not translate objects etc. so should be extensible for multiple objects (Players)
* Contains keyPressed() and keyReleased() to keep all input together.
*/
class Input
{
  boolean isUp, isDown, isRight, isLeft;

  public boolean CaptureMovement(int keyVal, boolean bool)
  {
    switch(keyVal)
    {
      case 'W':
      case UP:
        return isUp = bool;
        
      case 'S':
      case DOWN:
        return isDown = bool;
        
      case 'A':
      case LEFT:
        return isLeft = bool;
        
      case 'D':
      case RIGHT:
        return isRight = bool;
        
      default:
        return bool;
    }
  }
}

/*
* Placing keyPressed and keyReleased here to neaten code up.
*/
  
  void keyPressed()
  {
    input.CaptureMovement(keyCode, true);
  }
  
  void keyReleased()
  {
    input.CaptureMovement(keyCode, false);
  }
