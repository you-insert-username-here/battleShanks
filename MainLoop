/*
* This will be one tab of your sketch, I am aiming to keep code organised with classes in seperate tabs etc.
* This sketch tab will handle calling other classes, instatiating objects and handling base draws/updates/setup
*/

Player player;
Input input;

void setup()
{
  size(600, 600);
  // Instantiate a tank object as Player1
  player = new Player("Player1", width >> 1, height >> 1, 20, 4, 10, 2, 5);
  
  input = new Input();
  
}

void draw()
{
  background(0350);
  player.update();
}
